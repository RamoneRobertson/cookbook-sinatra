<h1>Welcome to your Cookbook</h1>

<p>You currently have in your cookbook:</p>
<% @recipes.each_with_index do |recipe, index|  %>
<div class="container">
  <div class="row d-flex flex-row">
    <div class="col-12 col-lg-3 card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= recipe.name %></h5>
        <p class="card-text w-100"><%= recipe.description %></p>
       <a href="/recipes/<%= index %>"><i class="text-end fa-solid fa-trash"></i></a>

      </div>
    </div>
  </div>
</div>

<% end %>

<a href="/add_recipe">Add a Recipe</a>
